      </channels>
   </channel-group-type>
   <channel-type id="6" advanced="true">
      <item-type>Number</item-type>
      <label>Available Power Sources</label>
      <description><![CDATA[0 – DC power1 – Internal Battery2 – External Battery4 – Power over Ethernet5 – USB6 – AC (Mains) power7 – Solar]]></description>
      <tags>
         <tag>Integer</tag>
      </tags>
      <state readOnly="true"/>
   </channel-type>
