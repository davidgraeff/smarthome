         <channel id="0" typeId="9"><!--Channel "Battery Level", ID: 9, InstanceID: 0--></channel>
      </channels>
   </channel-group-type>
   <channel-type id="9" advanced="true">
      <item-type>Number</item-type>
      <label>Battery Level</label>
      <description><![CDATA[Contains the current battery level as a percentage (with a range from 0 to 100). This value is only valid when the value of Available Power Sources Resource is 1.]]></description>
      <tags>
         <tag>Integer</tag>
      </tags>
      <state readOnly="true"/>
   </channel-type>
   <channel-group-type id="10"><!--MultiInstances: Single-->
      <label>Memory Free</label>
      <channels>
